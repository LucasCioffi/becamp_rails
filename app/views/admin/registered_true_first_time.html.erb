<h2>Attending True First Time</h2>
<table>
  <tbody>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Attending</th>
      <th>How Heard</th>
      <th>Shirt Size</th>
      <th>Created At</th>
      <th>Updated At</th>
    </tr>
    <% User.where.not(provider: nil).where(attending: true).where(first_time_attendee: true).order(:updated_at).each do |user| %>
      <tr>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user.attending? %>
        </td>
        <td>
          <%= user.heard_about_by %>
        </td>
        <td>
          <%= user.shirt_size %>
        </td>
        <td>
          <%= user.created_at %>
        </td>
        <td>
          <%= user.updated_at %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
